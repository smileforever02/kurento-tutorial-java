liMargin = 0.2em
lineHeight = 2em

li
  list-style: none;

.full-width
  width 100%
  
.center-content
  display flex
  justify-content center
  align-items center
  height 100%

.logon
  display block-inline
  float right 
  color white
  cursor pointer

.add-friend
  display block
  height 2em
  line-height 2.3em
  font-size 2.5em
  color green
  cursor pointer
  text-align center

.page-content
  width 100%
  padding 0

.item-list li
  height lineHeight
  line-height lineHeight
  background #cecece
  margin-top liMargin
  padding 0 liMargin 0 liMargin
  cursor pointer
  span
    display inline-block
    line-height lineHeight
  .glyphicon
    color green 

.right
  float right 

.container
  height 100%

.navigator
  position fixed
  width 100%
  left 0px
  padding 10px
  background-color #563d7c

.nav-item
  padding-right .5rem
  padding-left .5rem
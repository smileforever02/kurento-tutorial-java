.replay-wrapper
  display flex
  width 100%
  height 100%
  overflow hidden
  flex-direction column
  flex-wrap nowrap
  justify-content center
  video
    width 100%

#slider
  position fixed
  left 0.5em
  right 0.5em
  bottom 1em
  background-color #b7b7b9

